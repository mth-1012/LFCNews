<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.minhthanh.lfcnews.PlayerActivity">

    <ImageView
        android:id="@+id/imageViewPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/unavailable_sermon_thumbnail" />

    <TextView
        android:id="@+id/textViewPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageViewPlayer"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:textSize="18sp"
        android:textStyle="normal"
        android:text="TextView" />
</RelativeLayout>

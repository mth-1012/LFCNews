<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageHome"
        android:layout_width="75px"
        android:layout_height="75px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/imageAway"
        android:layout_width="75px"
        android:layout_height="75px"
        android:layout_alignStart="@+id/imageHome"
        android:layout_below="@+id/imageHome"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="25px"/>

    <TextView
        android:id="@+id/textHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:text="TextView"
        android:layout_alignTop="@+id/imageHome"
        android:layout_toEndOf="@+id/imageHome"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textAway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageAway"
        android:layout_alignStart="@+id/textHome"
        android:layout_marginBottom="25px"
        android:text="TextView" />

    <TextView
        android:id="@+id/homeResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:text="TextView"
        android:layout_alignBaseline="@+id/textHome"
        android:layout_alignBottom="@+id/textHome"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/awayResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/textAway"
        android:layout_alignBottom="@+id/textAway"
        android:layout_marginBottom="25px"
        android:layout_alignStart="@+id/homeResult" />
</RelativeLayout>